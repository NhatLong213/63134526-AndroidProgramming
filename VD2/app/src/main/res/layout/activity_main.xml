<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#EEF7F8"
        android:layout_marginTop="20sp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số thứ nhất"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtSo1"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="Mời bạn nhập một số"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#EEF7F8"
        android:layout_marginTop="20sp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số thứ hai"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtSo2"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="Mời bạn nhập một số"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#EEF7F8"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal">


     <Button
         android:id="@+id/btnCong"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="+"
         android:layout_margin="4sp"
         android:onClick="XuLyCong"/>
        <Button
            android:id="@+id/btnTru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_margin="4sp"
            android:onClick="XuLyTru"/>

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_margin="4sp"
            android:onClick="XuLyNhan"/>

        <Button
            android:id="@+id/btnChia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_margin="4sp"
            android:onClick="XuLyChia"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#EEF7F8"
        android:layout_marginTop="20sp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả là:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtKetQua"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="Nơi hiển thị kết quả"
            android:enabled="false"/>



    </LinearLayout>


</LinearLayout>