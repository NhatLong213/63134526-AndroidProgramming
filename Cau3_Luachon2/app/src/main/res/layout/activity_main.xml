        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextView" />
 <TextView
        android:id="@+id/introTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Quê quán: Ninh Hòa - Khánh Hòa - Việt Nam"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextView" />
<TextView
        android:id="@+id/introTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="SDT: 0794913604"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextView" />
 <ImageView
        android:id="@+id/facebookIcon"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="196dp"
        android:contentDescription="@string/facebook_description"
        android:onClick="onFacebookIconClicked"
        android:src="@drawable/logofb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introTextView" />

    <ImageView
        android:id="@+id/zaloIcon"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="196dp"
        android:contentDescription="@string/zalo_description"
        android:onClick="onZaloIconClicked"
        android:src="@drawable/logozl"
        app:layout_constraintStart_toEndOf="@id/facebookIcon"
        app:layout_constraintTop_toBottomOf="@id/introTextView" />

    <ImageView
        android:id="@+id/instagramIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="196dp"
        android:contentDescription="@string/instagram_description"
        android:onClick="onInstagramIconClicked"
        android:src="@drawable/logoig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/zaloIcon"
        app:layout_constraintTop_toBottomOf="@id/introTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
