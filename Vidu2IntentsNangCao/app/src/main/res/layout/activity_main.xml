<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="34dp"
        android:background="#648BFD"
        android:text="MÀN HÌNH NHẬP LIỆU"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Họ và tên"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="Năm sinh"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edtHoVaTen"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/edtTuoi1"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="287dp" />

    <Button
        android:id="@+id/btnMH1"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:text="OK, Nhập"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTuoi1" />
</androidx.constraintlayout.widget.ConstraintLayout>